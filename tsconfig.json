{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "paths": {
      "@easylink/*": ["./packages/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules", "**/dist", "**/build", "**/.next"]
}
